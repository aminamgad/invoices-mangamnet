<style>
/* Quick Actions Cards */
.quick-action-card {
    display: block;
    background: var(--glass-bg);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 24px;
    text-align: center;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
    box-shadow: var(--glass-shadow);
    height: 100%;
    min-height: 120px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.quick-action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(0, 119, 255, 0.2);
    text-decoration: none;
    color: var(--text-primary);
    border-color: #0077FF;
}

.quick-action-icon {
    margin-bottom: 12px;
}

.quick-action-icon i {
    font-size: 2.5rem;
    color: #0077FF;
    transition: all 0.3s ease;
}

.quick-action-card:hover .quick-action-icon i {
    transform: scale(1.1);
    color: #0056CC;
}

.quick-action-text {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-primary);
    margin-top: 8px;
}

/* Dark mode enhancements */
[data-theme="dark"] .quick-action-card {
    background: var(--glass-bg);
    border-color: var(--glass-border);
}

[data-theme="dark"] .quick-action-card:hover {
    border-color: #4da6ff;
}

[data-theme="dark"] .quick-action-icon i {
    color: #4da6ff;
}

[data-theme="dark"] .quick-action-card:hover .quick-action-icon i {
    color: #0077FF;
}
</style>

<script>
// Invoice management functions
function viewInvoice(invoiceId) {
    window.open(\`/invoices/\${invoiceId}\`, '_blank');
}

function editInvoice(invoiceId) {
    window.location.href = \`/invoices/\${invoiceId}/edit\`;
}

function markAsPaid(invoiceId) {
    Swal.fire({
        title: 'تأكيد الدفع',
        text: 'هل أنت متأكد من تحديد هذه الفاتورة كمدفوعة؟',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'نعم، تأكيد',
        cancelButtonText: 'إلغاء',
        customClass: {
            confirmButton: 'btn btn-success',
            cancelButton: 'btn btn-secondary'
        }
    }).then((result) => {
        if (result.isConfirmed) {
            // Mark as distributor to admin paid
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = \`/invoices/\${invoiceId}/payment/distributorToAdmin\`;
            document.body.appendChild(form);
            form.submit();
        }
    });
}

// Bulk payment functions
function bulkPayClient(clientId, clientName, count) {
    Swal.fire({
        title: 'تأكيد الدفع الجماعي',
        text: \`هل أنت متأكد من تحديد جميع الفواتير (\${count}) للعميل "\${clientName}" كمدفوعة؟\`,
