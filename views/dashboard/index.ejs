    }).then((result) => {
        if (result.isConfirmed) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = \`/invoices/bulk-pay/client/\${clientId}\`;
            document.body.appendChild(form);
            form.submit();
        }
    });
}

function bulkPayDistributor(distributorId, distributorName, count) {
    Swal.fire({
        title: 'تأكيد الدفع الجماعي',
        text: \`هل أنت متأكد من تحديد جميع الفواتير (\${count}) للموزع "\${distributorName}" كمدفوعة؟\`,
