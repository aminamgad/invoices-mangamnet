                        <th class="text-center" style="width: 50px;">
                            <input type="checkbox" class="form-check-input" id="selectAllCheckbox" onchange="toggleSelectAll()">
                        </th>
                        <th class="text-center" style="width: 120px;">الكود</th>
                        <th class="text-center" style="width: 150px;">العميل</th>
                        <th class="text-center" style="width: 120px;">الموزع</th>
                        <th class="text-center" style="width: 120px;">الإجمالي</th>
                        <th class="text-center" style="width: 100px;">الضريبة</th>
                        <th class="text-center" style="width: 120px;">الإدارة</th>
                        <th class="text-center" style="width: 100px;">الربح</th>
                        <th class="text-center" style="width: 120px;">الحالة</th>
                        <th class="text-center" style="width: 150px;">الإجراءات</th>
                    </tr>
                </thead>
                <tbody id="invoicesTableBody">
                    ${invoices && invoices.length > 0 ? invoices.map(invoice => `
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input invoice-checkbox" value="${invoice._id}" onchange="updateSelectedCount()">
                            </td>
                            <td class="text-center">
                                <strong>${invoice.invoiceCode || 'N/A'}</strong>
                            </td>
                            <td class="text-center">
                                ${invoice.client?.fullName || 'غير محدد'}
                            </td>
                            <td class="text-center">
                                ${invoice.assignedDistributor?.username || 'غير محدد'}
                            </td>
                            <td class="text-center">
                                <span class="fw-bold">${(invoice.total || 0).toLocaleString('ar-SA')} ج.م</span>
                            </td>
                            <td class="text-center">
                                ${(invoice.taxAmount || 0).toLocaleString('ar-SA')} ج.م
                            </td>
                            <td class="text-center">
                                ${(invoice.managementTaxAmount || 0).toLocaleString('ar-SA')} ج.م
                            </td>
                            <td class="text-center">
                                ${(invoice.profitAmount || 0).toLocaleString('ar-SA')} ج.م
                            </td>
                            <td class="text-center">
                                ${invoice.paymentStatus?.adminToCompany?.isPaid ? 
                                    '<span class="status-badge status-completed">مكتملة</span>' : 
                                    invoice.paymentStatus?.distributorToAdmin?.isPaid ? 
                                        '<span class="status-badge status-paid">في انتظار الشركة</span>' : 
                                        invoice.paymentStatus?.clientToDistributor?.isPaid ? 
                                            '<span class="status-badge status-paid">في انتظار الإدارة</span>' : 
                                            '<span class="status-badge status-pending">في انتظار العميل</span>'
                                }
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <button class="action-btn btn-view" onclick="viewInvoice('${invoice._id}')" title="عرض التفاصيل">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn btn-edit" onclick="editInvoice('${invoice._id}')" title="تعديل">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn btn-delete" onclick="deleteInvoice('${invoice._id}')" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    `).join('') : `
                        <tr>
                            <td colspan="10" class="text-center py-4 text-muted">لا توجد فواتير لعرضها</td>
                        </tr>
                    `}
                </tbody>
            </table>
        </div>
    </div>
</div>

