<% const title = 'إدارة الفواتير'; %>
<%- include('../layout', { title, body: `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-file-invoice text-primary"></i>
        إدارة الفواتير
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/reports" class="btn btn-outline-info">
                <i class="fas fa-chart-line"></i>
                التقارير
            </a>
        </div>
        <a href="/invoices/new" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            إنشاء فاتورة جديدة
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 col-sm-6 col-6 mb-3">
        <div class="stats-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="mb-0">${invoices ? invoices.length : 0}</h4>
                        <p class="mb-0">إجمالي الفواتير</p>
                    </div>
                    <i class="fas fa-file-invoice fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 col-sm-6 col-6 mb-3">
        <div class="stats-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="mb-0">${invoices ? invoices.filter(i => i.paymentStatus.adminToCompany.isPaid).length : 0}</h4>
                        <p class="mb-0">مكتملة الدفع</p>
                    </div>
                    <i class="fas fa-check-circle fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 col-sm-6 col-6 mb-3">
        <div class="stats-card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="mb-0">${invoices ? invoices.filter(i => !i.paymentStatus.clientToDistributor.isPaid).length : 0}</h4>
                        <p class="mb-0">في انتظار الدفع</p>
                    </div>
                    <i class="fas fa-clock fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 col-sm-6 col-6 mb-3">
        <div class="stats-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="mb-0">${invoices && invoices.length > 0 ? invoices.reduce((sum, i) => sum + (i.total || 0), 0).toLocaleString('ar-SA') : 0}</h4>
                        <p class="mb-0">إجمالي المبلغ (جنيه)</p>
                    </div>
                    <i class="fas fa-money-bill-wave fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Invoices Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-list"></i>
            قائمة الفواتير
            <span class="badge bg-primary ms-2">${invoices ? invoices.length : 0}</span>
        </h5>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-success btn-sm" onclick="selectAllInvoices()">
